<Hds::Form as |HF|>
  <HF.Section>
    <Hds::Alert @type="inline" @color="critical" as |HA|>
      <HA.Title @tag="h2">Form Submission Error</HA.Title>
      <HA.Description>Please Correct: </HA.Description>
      <HA.Description>
        <Hds::Link::Inline @href="#" @color="secondary">Username</Hds::Link::Inline>
      </HA.Description>
    </Hds::Alert>
  </HF.Section>
  <HF.Separator />
  <HF.Section>
    <HF.SectionMultiFieldGroup>
      <Hds::Form::TextInput::Field name="first-name-field" as |FF|>
        <FF.Label>First Name</FF.Label>
      </Hds::Form::TextInput::Field>
      <Hds::Form::TextInput::Field name="last-name-field" as |FF|>
        <FF.Label>Last Name</FF.Label>
      </Hds::Form::TextInput::Field>
    </HF.SectionMultiFieldGroup>
  </HF.Section>
  <HF.Separator />
  <HF.Section>
    <HF.SectionMultiFieldGroup>
      <Hds::Form::TextInput::Field name="username-field" as |FF|>
        <FF.Label>Username</FF.Label>
      </Hds::Form::TextInput::Field>
      <Hds::Form::TextInput::Field name="email-field" as |FF|>
        <FF.Label>Email</FF.Label>
      </Hds::Form::TextInput::Field>
    </HF.SectionMultiFieldGroup>
  </HF.Section>
  <HF.Separator />
  <HF.Section>
    <HF.SectionMultiFieldGroup>
      <Hds::Form::TextInput::Field name="password-field" as |FF|>
        <FF.Label>Password</FF.Label>
      </Hds::Form::TextInput::Field>
      <Hds::Form::TextInput::Field name="password-confirm-field" as |FF|>
        <FF.Label>Password Confirmation</FF.Label>
      </Hds::Form::TextInput::Field>
    </HF.SectionMultiFieldGroup>
  </HF.Section>
  <HF.Separator />
  <HF.Footer as |Footer|>
    <Footer.ButtonSet>
      <Hds::Button @text="Submit" @type="submit" />
      <Hds::Button @text="Cancel" @color="secondary" />
    </Footer.ButtonSet>
  </HF.Footer>
</Hds::Form>