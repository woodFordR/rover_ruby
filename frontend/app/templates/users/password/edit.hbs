<Hds::Form as |HF|>
  <HF.Section>
    <Hds::Alert @type="inline" @color="critical" as |HA|>
      <HA.Title @tag="h2">Form Submission Error</HA.Title>
      <HA.Description>Please Correct: </HA.Description>
      <HA.Description>
        <Hds::Link::Inline @href="#" @color="secondary">Password</Hds::Link::Inline>
      </HA.Description>
    </Hds::Alert>
  </HF.Section>
  <HF.Separator />
  <HF.Section>
    <Hds::Form::TextInput::Field name="old-password-field" as |FF|>
      <FF.Label>Old Password</FF.Label>
    </Hds::Form::TextInput::Field>
  </HF.Section>
  <HF.Section>
    <HF.SectionMultiFieldGroup>
      <Hds::Form::TextInput::Field name="password-field" as |FF|>
        <FF.Label>New Password</FF.Label>
      </Hds::Form::TextInput::Field>
      <Hds::Form::TextInput::Field name="password-confirm-field" as |FF|>
        <FF.Label>New Password Confirmation</FF.Label>
      </Hds::Form::TextInput::Field>
    </HF.SectionMultiFieldGroup>
  </HF.Section>
  <HF.Separator />
  <HF.Footer as |Footer|>
    <Footer.ButtonSet>
      <Hds::Button @text="Confirm" @type="submit" />
      <Hds::Button @text="Cancel" @color="secondary" />
    </Footer.ButtonSet>
  </HF.Footer>
</Hds::Form>