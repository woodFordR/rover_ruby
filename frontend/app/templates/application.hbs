<Hds::AppFrame as |Frame|>
  <Frame.Sidebar>
    <div class="links">
      <Hds::Button
        @isIconOnly={{true}}
        @icon="code"
        @route="index"
        @text="index"
        @color="tertiary"
        @size="large"
      />
      <Hds::Button
        @isIconOnly={{true}}
        @icon="robot"
        @route="about"
        @text="about"
        @color="tertiary"
        @size="large"
      />
      <Hds::Button
        @isIconOnly={{true}}
        @icon="mail"
        @route="contact"
        @text="contact"
        @color="tertiary"
        @size="large"
      />
      <Hds::Button
        @isIconOnly={{true}}
        @text="x"
        @color="tertiary"
        @icon="twitter-x"
        @iconPosition="trailing"
        @href="https://twitter.com/akaewell"
        @size="large"
      />

      <Hds::Button
        @isIconOnly={{true}}
        @text="github"
        @color="tertiary"
        @icon="github"
        @iconPosition="trailing"
        @href="https://github.com/woodFordR"
        @size="large"
      />
    </div>
  </Frame.Sidebar>

  <Frame.Main>
    {{outlet}}
  </Frame.Main>
</Hds::AppFrame>
