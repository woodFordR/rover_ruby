<Hds::AppFrame @hasHeader={{true}} @hasSidebar={{true}} @hasFooter={{true}} as |Frame|>
  <Frame.Header>
    <Hds::Text:Display @tag="h1">The Ocean Portfolio Project: The OPP</Hds::Text:Display>
    <Hds::Breadcrumb>
      <Hds::Breadcrumb::Item @text="~" />
      <Hds::Breadcrumb::Item @text="~" />
      <Hds::Breadcrumb::Item @text="~" />
      <Hds::Breadcrumb::Item @text="~" />
      <Hds::Breadcrumb::Item @text="~" />
    </Hds::Breadcrumb>
  </Frame.Header>
  <Frame.Sidebar>
    <Hds::Layout::Flex
      @direction="column"
      @gap="16"
    as |LF|>
      <LF.Item>
        <Hds::Button
          @icon="sign-in"
          @route="sessions.new"
          @text="Login"
          @color="tertiary"
          @size="large"
        />
      </LF.Item>
      <LF.Item>
        <Hds::Button
          @icon="home"
          @route="index"
          @text="Home"
          @color="tertiary"
          @size="large"
        />
      </LF.Item>
      <LF.Item>
        <Hds::Button
          @icon="code"
          @route="portfolio"
          @text="Portfolio"
          @color="tertiary"
          @size="large"
        />
      </LF.Item>
      <LF.Item>
        <Hds::Button
          @icon="robot"
          @route="about"
          @text="About"
          @color="tertiary"
          @size="large"
        />
      </LF.Item>
      <LF.Item>
        <Hds::Button
          @icon="mail"
          @route="contact"
          @text="Contact"
          @color="tertiary"
          @size="large"
        />
      </LF.Item>
      <LF.Item>
        <Hds::Button
          @icon="user-plus"
          @route="users.new"
          @text="Join"
          @color="tertiary"
          @size="large"
        />
      </LF.Item>
    </Hds::Layout::Flex>
  </Frame.Sidebar>

  <Frame.Main>
    {{outlet}}
  </Frame.Main>
  <Frame.Footer>
    <Hds::Separator />
    <Hds::Layout::Flex @align="center" @gap="32" as |LF|>
      <LF.Item>
        <Hds::Badge @text="Operational" @color="success" @icon="check-circle" />
      </LF.Item>
      <LF.Item>
        <Hds::Text::Body @tag="span" @size="200">
          Adam Kaewell
        </Hds::Text::Body>
      </LF.Item>
      <LF.Item>
        <Hds::Text::Body @tag="span" @size="200">
          <Hds::Link::Inline
            @icon="twitter"
            @iconPosition="leading"
            @href="https://twitter.com/akaewell"
          >
            X.com
          </Hds::Link::Inline>
        </Hds::Text::Body>
      </LF.Item>
      <LF.Item>
        <Hds::Text::Body @tag="span" @size="200">
          <Hds::Link::Inline
            @icon="github"
            @iconPosition="leading"
            @href="https://github.com/woodFordR"
          >
            Github
          </Hds::Link::Inline>
        </Hds::Text::Body>
      </LF.Item>
      <LF.Item>
        <Hds::Badge @text="Version 2.0" @color="success" @icon="robot" />
      </LF.Item>
    </Hds::Layout::Flex>
    <Hds::Separator />
  </Frame.Footer>
</Hds::AppFrame>