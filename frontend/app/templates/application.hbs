<Hds::AppFrame @hasHeader={{true}} @hasSidebar={{true}} @hasFooter={{true}} as |Frame|>
  <Frame.Sidebar>
    <Hds::Button
      @isIconOnly={{true}}
      @icon="home"
      @route="index"
      @text="Home"
      @color="tertiary"
      @size="large"
    />
    <Hds::Button
      @isIconOnly={{true}}
      @icon="code"
      @route="portfolio"
      @text="Portfolio"
      @color="tertiary"
      @size="large"
    />
    <Hds::Button
      @isIconOnly={{true}}
      @icon="user"
      @route="about"
      @text="About"
      @color="tertiary"
      @size="large"
    />
    <Hds::Button
      @isIconOnly={{true}}
      @icon="mail"
      @route="contact"
      @text="Contact"
      @color="tertiary"
      @size="large"
    />
  </Frame.Sidebar>

  <Frame.Main>
    {{outlet}}
  </Frame.Main>
  <Frame.Footer>
    <Hds::Text::Display @tag="p" @align="center" @size="200">
      A Father, Son, Brother, Friend, and Software Engineer to the world.
    </Hds::Text::Display>
  </Frame.Footer>
</Hds::AppFrame>