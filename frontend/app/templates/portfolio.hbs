<Hds::PageHeader as |PH|>
  <PH.Title>Portfolio</PH.Title>
  <PH.Breadcrumb>
    <Hds::Breadcrumb>
      <Hds::Breadcrumb::Item @text="threading" />
      <Hds::Breadcrumb::Item @text="Thread" />
      <Hds::Breadcrumb::Item @text="target=request_worker" />
      <Hds::Breadcrumb::Item @text="args=(connection, portfolio)" />
      <Hds::Breadcrumb::Item @text="start()" @current={{true}} />
    </Hds::Breadcrumb>
  </PH.Breadcrumb>
  <PH.IconTile @icon="database" @color="neutral" />
  <PH.Badges>
    <Hds::Badge @text="in-progress" @icon="award" @color="success" @type="inverted" />
  </PH.Badges>
  <PH.Subtitle><strong>Displaying personal projects</strong></PH.Subtitle>
  <PH.Description><strong>Each project has links to click for code +- deployment, plus a code snippet.</strong></PH.Description>
  <PH.Generic>
    <Hds::Layout::Grid @columnMinWidth="100%" @gap="16" as |LG|>
      <Hds::Layout::Flex @align="start" @gap="16">
        <LG.Item>
          <Hds::Link::Standalone
            @color="secondary"
            @iconPosition="trailing"
            @isHrefExternal={{true}}
            @icon="collections"
            @text="Docs"
            @size="medium"
            @href="https://www.notion.com/"
          />
        </LG.Item>
        <LG.Item>
          <Hds::Link::Standalone
            @color="secondary"
            @iconPosition="trailing"
            @isHrefExternal={{true}}
            @icon="terminal-screen"
            @text="Textual"
            @size="medium"
            @href="https://textual.textualize.io/"
          />
        </LG.Item>
        <LG.Item>
          <Hds::Link::Standalone
            @color="secondary"
            @iconPosition="trailing"
            @isHrefExternal={{true}}
            @icon="rocket"
            @text="Firecracker"
            @size="medium"
            @href="https://firecracker-microvm.github.io/"
          />
        </LG.Item>
      </Hds::Layout::Flex>
    </Hds::Layout::Grid>
  </PH.Generic>
</Hds::PageHeader>
<Hds::Separator />
<Hds::Layout::Grid @columnMinWidth="50%" @gap="32" as |LG|>
  {{#each @model as |project|}}
    <LG.Item @tag="div">
      <Hds::Card::Container class="portfolio-card-div" @level="mid" @levelHover="high" @levelActive="mid" @hasBorder={{true}}>
        <Hds::Layout::Grid @columnMinWidth="100%" @gap="16" as |LG|>
          <LG.Item>
            <Hds::Layout::Flex @align="start" @gap="16">
              <Hds::IconTile @logo={{project.logo}} @size="large" />
              <Hds::Layout::Flex @direction="column" @gap="8">
                <Hds::Text::Display @tag="h3" @size="400">
                  {{project.title}}
                </Hds::Text::Display>
                {{#if project.deployLink }}
                  <LG.Item>
                    <a href={{project.deployLink}}>
                      <Hds::Badge @text="Deployed Application" @color="success" @icon="check-circle" />
                    </a>
                  </LG.Item>
                {{else}}
                  <LG.Item>
                    <Hds::Badge @text="Still In Development" @color="warning" @icon="change-circle" />
                  </LG.Item>
                {{/if}}
                <Hds::Text::Body @tag="p" @size="300">
                  {{project.description}}
                </Hds::Text::Body>
              </Hds::Layout::Flex>
            </Hds::Layout::Flex>
          </LG.Item>
        </Hds::Layout::Grid>
        <Hds::Separator />
        <Hds::CodeBlock
          @language="javascript"
          @hasCopyButton={{true}}
          @value={{project.codeSnippet}}
          @hasLineNumbers={{false}}
        as |CB|>
          <CB.Description>
            {{project.codeDescription}}
          </CB.Description>
        </Hds::CodeBlock>
      </Hds::Card::Container>
    </LG.Item>
  {{/each}}
</Hds::Layout::Grid>