<Page::Navigator
  @page={{hash
    title="Adam Kaewell"
    subtitle="Welcome Welcome Welcome"
    description="This is my ocean, jump in."
  }}
/>
<Hds::Separator />
<Hds::Layout::Grid
  @gap="16"
  @columnMinWidth="5%"
  {{style height="100%" grid-template-rows="min-content"}}
  as |LG|
>
  <LG.Item></LG.Item>
  <LG.Item @colspan={{9}}>
    <Page::DataCard
      @cardIcon="image"
      @cardTitleLink="Recent Photos"
      @cardTitleBadge="Beach Vacation August 2025"
      @cardDescription="These photos below were taken during my beach vacation
        this summer with my daughter, Calloway, and our dog Woodford. We were
        at the pool, zoo, park, and beach. Enjoy."
    />
  </LG.Item>
  <LG.Item @colspan={{9}}>
    <Page::DataCard
      @cardIcon="file-check"
      @cardTitleLink="Current Updates"
      @cardTitleBadge="September 15, 2025"
      @cardDescription="Here is a link to my resume. My contact page contains
        more information."
      @cardLink={{@model.resumePath}}
    />
  </LG.Item>
  <LG.Item></LG.Item>
  <LG.Item @colspan={{20}}>
    <Swiper::Carousel
      @className="index-page-gallery"
      @images={{@model.photos}}
    />
  </LG.Item>
</Hds::Layout::Grid>