<Page::Navigator
  @page={{hash
    title="Adam Kaewell"
    subtitle="Welcome Welcome Welcome"
    description="This is my ocean, jump in."
  }}
/>
<Hds::Separator />
<Hds::Layout::Grid
  @gap="32"
  @columnMinWidth="10%"
  {{style height="100%" grid-template-rows="min-content"}}
  as |LG|
>
  <LG.Item></LG.Item>
  <LG.Item @colspan={{4}}>
    <Page::DataCard
      @cardIcon="image"
      @cardTitleLink="Recent Photos"
      @cardTitleBadge="Beach Vacation August 2025"
      @cardDescription="Here are some photos from my painting."
    />
  </LG.Item>
  <LG.Item @colspan={{4}}>
    <Page::DataCard
      @cardIcon="file-check"
      @cardTitleLink="Current Resume"
      @cardTitleBadge="PDF August 2025"
      @cardDescription="Here is a link to my resume. My contact page contains more information."
    />
  </LG.Item>
  <LG.Item></LG.Item>
  <LG.Item @colspan={{10}}>
    <Swiper::Carousel
      @className="index-page-gallery"
      @images={{array
        (hash src="/assets/images/master-bedroom-emerald-paint.png" alt="new emerald green painted room part 1")
        (hash src="/assets/images/master-bedroom-emerald-paint2.png" alt="new emerald green painted room part 2")
        (hash src="/assets/images/master-bedroom-emerald-paint3.png" alt="new emerald green painted room part 3")
      }}
    />
  </LG.Item>
</Hds::Layout::Grid>
