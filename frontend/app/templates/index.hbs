<Hds::PageHeader as |PH|>
  <PH.Title>Adam Kaewell's Cloud</PH.Title>
  <PH.Badges>
    <Hds::Badge @text="Welcome Welcome Welcome" @icon="database" @color="success" @type="inverted" @iconPosition="trailing" @size="large" />
  </PH.Badges>
</Hds::PageHeader>
<Hds::Separator />
<Hds::Layout::Grid @columnMinWidth="50%" @gap="32" as |LG|>
  <LG.Item>
    <Hds::Card::Container @level="mid" @levelHover="high" @levelActive="mid" @hasBorder={{true}}>
      <Hds::Layout::Flex @align="center" @gap="16" as |LF|>
        <LF.Item>
          <Hds::IconTile @icon="image" @size="medium" />
          <Hds::Text::Display @tag="h2" @size="300">
            Recent Photos
          </Hds::Text::Display>
          <Hds::Badge
            @text="Beach Vacation August 2025"
            @color="success"
            @icon="check-circle"
          />
          <Hds::Text::Body @tag="p">
            Here are some photos from my recent trip to the Jersey shore.
          </Hds::Text::Body>
        </LF.Item>
      </Hds::Layout::Flex>
    </Hds::Card::Container>
  </LG.Item>
  <LG.Item>
    <Hds::Card::Container @level="mid" @levelHover="high" @levelActive="mid" @hasBorder={{true}}>
      <Hds::Layout::Flex @align="center" @gap="16" as |LF|>
        <LF.Item>
          <Hds::IconTile @icon="" @size="medium" />
          <Hds::Text::Display @tag="h2" @size="300">
            Resume - August 2025
          </Hds::Text::Display>
          <Hds::Badge
            @text="Link to Resume"
            @color="success"
            @icon="guide"
          />
          <Hds::Text::Body @tag="p">
            Any Questions, Visit My Contact Page To Ask...
          </Hds::Text::Body>
        </LF.Item>
      </Hds::Layout::Flex>
    </Hds::Card::Container>
  </LG.Item>
  <LG.Item @colspan={2}>
    <Swiper::Carousel />
    <Hds::Separator />
    <Hds::Link::Standalone
      @icon="arrow-right"
      @iconPosition="trailing"
      @text="View more photos"
      @href="#"
    />
  </LG.Item>
  <Hds::Card::Container @level="mid" @levelHover="high" @levelActive="mid" @hasBorder={{true}}>
    <Hds::Text::Display @tag="h2" @size="300">Card</Hds::Text::Display>
  </Hds::Card::Container>
  <Hds::Card::Container @level="mid" @levelHover="high" @levelActive="mid" @hasBorder={{true}}>
    <Hds::Text::Display @tag="h2" @size="300">Card #2</Hds::Text::Display>
  </Hds::Card::Container>
  <Hds::Card::Container @level="mid" @levelHover="high" @levelActive="mid" @hasBorder={{true}}>
    <Hds::Text::Display @tag="h2" @size="300">Card #3</Hds::Text::Display>
  </Hds::Card::Container>
</Hds::Layout::Grid>