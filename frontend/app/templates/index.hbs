<Hds::PageHeader as |PH|>
  <PH.Title>Adam Kaewell's Cloud</PH.Title>
  <PH.Badges>
    <Hds::Badge @text="Welcome Welcome Welcome" @icon="database" @color="success" @type="inverted" @iconPosition="trailing" @size="large" />
  </PH.Badges>
</Hds::PageHeader>
<Hds::Separator />
<Hds::Layout::Grid @columnMinWidth="33.33%" @gap="32" as |LG|>
  <LG.Item @colspan={{3}}>
    <Hds::Card::Container @level="mid" @levelHover="high" @levelActive="mid" @hasBorder={{true}}>
      <Hds::Layout::Grid @columnMinWidth="100%" @gap="16">
        <Hds::Layout::Flex @align="center" @gap="8">
          <Hds::IconTile @icon="image" @size="medium" />
          <Hds::Text::Display @tag="h2" @size="300">
            Recent Photos
          </Hds::Text::Display>
        </Hds::Layout::Flex>
        <Hds::Layout::Grid @columnMinWidth="100%" @gap="8" as |LG|>
          <LG.Item>
            <Hds::Badge
              @text="Beach Vacation August 2025"
              @color="success"
              @icon="check-circle"
            />
          </LG.Item>
          <Hds::Text::Body @tag="p">
            Here are some photos from my recent trip to the Jersey shore.
          </Hds::Text::Body>
        </Hds::Layout::Grid>
        <Hds::Link::Standalone
          @icon="arrow-right"
          @iconPosition="trailing"
          @text="View more photos"
          @href="#"
        />
      </Hds::Layout::Grid>
    </Hds::Card::Container>
  </LG.Item>
  <Hds::Card::Container @level="mid" @levelHover="high" @levelActive="mid" @hasBorder={{true}}>
    <Hds::Text::Display @tag="h2" @size="300">Card</Hds::Text::Display>
  </Hds::Card::Container>
  <Hds::Card::Container @level="mid" @levelHover="high" @levelActive="mid" @hasBorder={{true}}>
    <Hds::Text::Display @tag="h2" @size="300">Card #2</Hds::Text::Display>
  </Hds::Card::Container>

  <Hds::Card::Container @level="mid" @levelHover="high" @levelActive="mid" @hasBorder={{true}}>
    <Hds::Text::Display @tag="h2" @size="300">Card #3</Hds::Text::Display>
  </Hds::Card::Container>
</Hds::Layout::Grid>