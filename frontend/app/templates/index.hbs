<Hds::PageHeader as |PH|>
  <PH.Title>adam's collection of things</PH.Title>
  <PH.Breadcrumb>
    <Hds::Breadcrumb>
      <Hds::Breadcrumb::Item @text="project" @icon="layers" />
      <Hds::Breadcrumb::Item @text="portfolio" @icon="code" />
    </Hds::Breadcrumb>
  </PH.Breadcrumb>
  <PH.Badges>
    <Hds::Badge @text="working" @icon="rocket" @color="neutral-dark-mode" @iconPosition="trailing" />
  </PH.Badges>
</Hds::PageHeader>
<Hds::Separator />
<Hds::Accordion as |A|>
  {{#each @model as |project|}}
    <A.Item>
      <:toggle>{{project.title}} -- <Hds::IconTile @logo={{project.logo}} @size="large" /></:toggle>
      <:content>
        <p>{{project.description}}</p>
        <p>repo owner: {{project.owner}}</p>
      </:content>
    </A.Item>
    <Hds::Separator />
  {{/each}}
</Hds::Accordion>
