<Hds::Card::Container
  class="portfolio-card-div"
  @level="mid"
  @levelHover="high"
  @levelActive="mid"
  @hasBorder={{true}}
  ...attributes
>
  <Hds::Layout::Grid @columnMinWidth="100%" @gap="16" as |LG|>
    <LG.Item>
      <Hds::Layout::Flex @align="start" @gap="16" @wrap={{false}}>
        {{#if @avatar}}
          <img src={{@avatar}} />
        {{else}}
          <Hds::IconTile @logo={{@logo}} @size="large" />
        {{/if}}
        <Hds::Layout::Flex @direction="column" @gap="8">
          <Hds::Text::Display @tag="h3" @size="400">
            {{@title}}
          </Hds::Text::Display>
          {{#if @deployLink }}
            <LG.Item>
              <a href={{@deployLink}}>
                <Hds::Badge
                  @text="Deployed Application"
                  @color="success"
                  @icon="check-circle"
                />
              </a>
            </LG.Item>
          {{else}}
            <LG.Item>
              <Hds::Badge
                @text="Still In Development"
                @color="warning"
                @icon="change-circle"
              />
            </LG.Item>
          {{/if}}
          <Hds::Text::Body @tag="p" @size="300">
            {{@description}}
          </Hds::Text::Body>
        </Hds::Layout::Flex>
      </Hds::Layout::Flex>
    </LG.Item>
  </Hds::Layout::Grid>
  <Hds::Separator />
  <Hds::CodeBlock
    @language={{@language}}
    @hasCopyButton={{true}}
    @value={{@code}}
    @hasLineNumbers={{false}}
  as |CB|>
    <CB.Description>
      {{@codeDescription}}
    </CB.Description>
  </Hds::CodeBlock>
</Hds::Card::Container>