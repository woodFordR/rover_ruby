<div
  class="body-data-card-container"
  ...attributes
>
  <Hds::Card::Container
    @level="mid"
    @levelHover="high"
    @levelActive="mid"
    @hasBorder={{true}}
  >
    <Hds::Layout::Flex @justify="start" @align="center" @gap="16" as |LF|>
      <LF.Item>
        <Hds::IconTile @icon={{@cardIcon}} @size="medium" />
      </LF.Item>
      <LF.Item>
        <Hds::Text::Display @tag="h2" @size="300">
          {{@cardTitleLink}}
        </Hds::Text::Display>
      </LF.Item>
      <LF.Item>
        <Hds::Badge
          @text={{@cardTitleBadge}}
          @color="success"
          @icon="check-circle"
        />
      </LF.Item>
    </Hds::Layout::Flex>
    <Hds::Separator />
    <Hds::Text::Body @tag="p">
      {{@cardDescription}}
    </Hds::Text::Body>
    {{#if @cardLink}}
      <Hds::Separator />
      <a href={{@cardLink}}>
        <Hds::Badge
          @text="Resume Link"
          @color="success"
          @icon="check-circle"
        />
      </a>
    {{/if}}
  </Hds::Card::Container>
</div>
